<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom style for BottomNavigationView item -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@color/blue</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextStyle</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
